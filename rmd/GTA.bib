	author = {Sumaila, U. Rashid and Lam, Vicky W. Y. and Miller, Dana D. and Teh, Louise and Watson, Reg A. and Zeller, Dirk and Cheung, William W. L. and Côté, Isabelle M. and Rogers, Alex D. and Roberts, Callum and Sala, Enric and Pauly, Daniel},
	year = {2015},
	keywords = {Conservation biology, Environmental Economics},
	file = {Full Text PDF:C\:\\Users\\echassot\\Zotero\\storage\\J7I26PQK\\Sumaila et al. - 2015 - Winners and losers in a world where the high seas .pdf:application/pdf;Snapshot:C\:\\Users\\echassot\\Zotero\\storage\\KPRZDZGF\\srep08481.html:text/html},
}

@article{Schaefer2015,
